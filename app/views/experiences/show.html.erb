<h1><%= @experience.name %></h1>
<p><%= @experience.user.first_name %> <%= @experience.user.last_name %></p>
<p>Description: <%= @experience.description %></p>
<p>Price: <%= number_to_currency(@experience.price) %>

	
	<h3>Comments</h3>
	<div id="comments">
		<%= render 'comments/comments'  %>
	</div>
	
	<h3>New Comment</h3>
 
 	<%= form_for [@experience, Comment.new] do |f| %>
 	  <p>
 	    <%= f.label :body %><br />
 	    <%= f.text_area :body %>
 	  </p>
 	  <p><%= f.submit "Submit" %></p>
 	<% end %>


