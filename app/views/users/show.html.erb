<h1><%= @user.first_name %> <%= @user.last_name %></h1>
	<p>Email: <%= @user.email %></p>
	<p>Bio: <%= @user.bio %></p>
	<% if current_user && current_user.id == @user.id %>
		<%= link_to "Edit Profile", edit_user_path(@user.id) %> 
	<% end %>

<h3>Comments</h3>
	<div id="comments">
		<%= render @comments  %>
	</div>
	
<h3>New Comment</h3>
 
 	<%= form_for [@user, Comment.new] do |f| %>
 	  <p>
 	    <%= f.label :body %><br />
 	    <%= f.text_area :body %>
 	  </p>
 	  <p><%= f.submit "Submit" %></p>
 	<% end %>

 <h3>Experiences</h3>

<div class="experience">
	<%= render @experiences %>
</div>

<%= paginate @experiences %>
